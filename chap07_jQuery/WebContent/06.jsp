	<button class="btn btn-danger" id="nextBtn" disabled>다음</button>
</div>

<script>
	$("#allChk").click(function() {
		$("#chk_1").trigger("click");
		$("#chk_2").trigger("click");
		console.log($("#allChk").prop("checked"));
		if(!$("#allChk").prop("checked")) {
			$("#rule_1").show(500);
			$("#rule_2").show(500);
			$("#nextBtn").attr("disabled", true);
		}
	});

	$("#chk_1").click(function() {
		$("#rule_1").hide(500);
		if($("#chk_2").prop("checked")) {
			$("#nextBtn").attr("disabled", false);
			$("#allChk").prop("checked", true);
		}
			
		if(!$("#chk_1").prop("checked")) {
			$("#rule_1").show(500);
			$("#nextBtn").attr("disabled", true);
			$("#allChk").prop("checked", false);
		}
	});

	$("#chk_2").click(function() {
		$("#rule_2").hide(500);
		if($("#chk_1").prop("checked")) {
			$("#nextBtn").attr("disabled", false);
			$("#allChk").prop("checked", true);
		}
		
		if(!$("#chk_2").prop("checked")) {
			$("#rule_2").show(500);
			$("#nextBtn").attr("disabled", true);
			$("#allChk").prop("checked", false);
		}
	});
	//===================================================
	// 이렇게 해놓고 위에서 땡겨쓸 수도 있다.
	// 이게 코드라인을 줄이는 측면에서는 더 효율적인듯
	function enableCheck() {
		var cnt=0;
		$(".sub").each(function(){
			if($(this).prop("checked"))
				cnt++;
		});
		if(cnt==2) {
			$("#a1").prop("checked", true);
			$("#next").prop("disabled", false);
		}else {
			$("#a1").prop("checked", false);
			$("#next").prop("disabled", true);
		}
	}
</script>